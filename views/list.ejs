<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Smart Task Scheduler</title>
  <link rel="stylesheet" href="css/style.css" />
</head>
<body>
  <div class="box">
    <h1>Smart Task Scheduler</h1>
  </div>

  <div class="Box">
    <form action="/" method="post">
      <input type="text" name="ele1" placeholder="Enter a new task" required />
      <button type="submit">+</button>
    </form>

    <div class="box1">
      <% ejes.forEach(function(items) { %>
        <form action="/delete" method="post" style="display:inline;">
          <div class="item">
            <input
              type="checkbox"
              name="checkbox1"
              value="<%= items._id %>"
              onchange="this.form.submit()"
            />
            <p><%= items.name %></p>
          </div>
        </form>
      <% }); %>
    </div>
  </div>
</body>
</html>
